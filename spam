#!/data/data/com.termux/files/usr/bin/bash

# Màu sắc
RED='\033[0;31m'
GREEN='\033[0;32m'
CYAN='\033[0;36m'
YELLOW='\033[1;33m'
BLUE='\033[1;34m'
RESET='\033[0m'

custom_webhook=""
bot_webhook=""
message_sent=0
spam_status="off"
spam_limit=0
ram_status="off"

# Banner
banner() {
  clear
  echo -e "${CYAN}"
  echo "╔══════════════════════════════════════╗"
  echo "║     DISCORD WEBHOOK SPAMMER TOOL     ║"
  echo "║     Made by Baor  discord.gg/conanhub - Termux       ║"
  echo "╚══════════════════════════════════════╝"
  echo -e "${RESET}"
}

# Nhập Webhook thủ công
input_webhook() {
  banner
  echo -e "${CYAN}Nhập Webhook URL:${RESET}"
  read -r custom_webhook
  if [[ "$custom_webhook" == https://discord.com/api/webhooks/* ]]; then
    echo -e "${GREEN}Đã lưu Webhook: $custom_webhook${RESET}"
  else
    echo -e "${RED}Webhook không hợp lệ!${RESET}"
    custom_webhook=""
  fi
}

# Tạo Webhook từ Bot
create_webhook() {
  banner
  read -p "$(echo -e "${CYAN}Nhập Bot Token: ${RESET}")" bot_token
  read -p "$(echo -e "${CYAN}Nhập Guild ID: ${RESET}")" guild_id

  echo -e "${BLUE}Đang lấy danh sách kênh...${RESET}"
  response=$(curl -s -H "Authorization: Bot $bot_token" "https://discord.com/api/v10/guilds/$guild_id/channels")

  channel_ids=($(echo "$response" | jq -r '.[] | select(.type == 0) | .id'))
  channel_names=($(echo "$response" | jq -r '.[] | select(.type == 0) | .name'))

  if [ ${#channel_ids[@]} -eq 0 ]; then
    echo -e "${RED}Không lấy được kênh.${RESET}"
    return
  fi

  echo -e "${GREEN}Danh sách kênh:${RESET}"
  for i in "${!channel_ids[@]}"; do
    printf "${YELLOW}%s.${RESET} %s (${CYAN}%s${RESET})\n" "$((i+1))" "${channel_names[$i]}" "${channel_ids[$i]}"
  done

  read -p "Chọn số: " choice
  index=$((choice - 1))

  if [ "$choice" -ge 1 ] && [ "$choice" -le ${#channel_ids[@]} ]; then
    channel_id="${channel_ids[$index]}"
    read -p "Tên webhook: " webhook_name

    response=$(curl -s -X POST "https://discord.com/api/v10/channels/$channel_id/webhooks" \
      -H "Authorization: Bot $bot_token" \
      -H "Content-Type: application/json" \
      -d "{\"name\": \"$webhook_name\"}")

    bot_webhook=$(echo "$response" | jq -r '.url // empty')

    if [[ "$bot_webhook" == https://discord.com/api/webhooks/* ]]; then
      echo -e "${GREEN}Đã tạo webhook: $bot_webhook${RESET}"
    else
      echo -e "${RED}Không thể tạo webhook.${RESET}"
    fi
  else
    echo -e "${RED}Lựa chọn không hợp lệ.${RESET}"
  fi
}

# Gửi status mỗi lần spam tin nhắn
send_status() {
  local target_webhook="$1"
  timestamp=$(date '+%H:%M:%S')
  ram=$(free -h | grep Mem | awk '{print $3 "/" $2}')
  uptime=$(uptime -p)
  status="**[STATUS - $timestamp]**
> Tin đã gửi: $message_sent
> Webhook: $( [[ "$mode" == "1" ]] && echo "Thủ công" || echo "Bot" )
> RAM: $ram
> Uptime: $uptime
> Webhook Status: $spam_status"

  curl -s -X POST -H "Content-Type: application/json" -d "{\"content\": \"$status\"}" "$target_webhook" > /dev/null
  echo -e "${CYAN}[$timestamp] Đã gửi status.${RESET}"
}

# Spam Webhook (Gửi tin nhắn liên tục)
spam_webhook() {
  banner
  echo -e "${CYAN}Chọn webhook để spam:${RESET}"
  echo -e "${YELLOW}1.${RESET} Webhook thủ công"
  echo -e "${YELLOW}2.${RESET} Webhook bot"
  read -p "Chọn: " mode

  if [ "$mode" == "1" ] && [ -z "$custom_webhook" ]; then
    echo -e "${RED}Webhook thủ công chưa được cấu hình!${RESET}"
    return
  elif [ "$mode" == "2" ] && [ -z "$bot_webhook" ]; then
    echo -e "${RED}Webhook bot chưa được cấu hình!${RESET}"
    return
  fi

  echo -e "${CYAN}Nhập tin nhắn để spam:${RESET}"
  read -r message
  read -p "$(echo -e "${CYAN}Nhập số lượng tin nhắn (0 là vô hạn):${RESET}")" spam_limit

  message_sent=0
  target_webhook=""
  [[ "$mode" == "1" ]] && target_webhook="$custom_webhook"
  [[ "$mode" == "2" ]] && target_webhook="$bot_webhook"

  echo -e "${GREEN}Bắt đầu spam tin nhắn...${RESET}"

  if [[ "$spam_limit" -eq 0 ]]; then
    while true; do
      curl -s -X POST -H "Content-Type: application/json" -d "{\"content\": \"$message\"}" "$target_webhook" > /dev/null
      message_sent=$((message_sent+1))
      echo -e "${CYAN}Đã gửi tin nhắn số $message_sent${RESET}"
      [ "$spam_status" == "on" ] && send_status "$target_webhook"
    done
  else
    while [ "$message_sent" -lt "$spam_limit" ]; do
      curl -s -X POST -H "Content-Type: application/json" -d "{\"content\": \"$message\"}" "$target_webhook" > /dev/null
      message_sent=$((message_sent+1))
      echo -e "${CYAN}Đã gửi tin nhắn số $message_sent${RESET}"
      [ "$spam_status" == "on" ] && send_status "$target_webhook"
    done
    echo -e "${YELLOW}Đã gửi đủ $message_sent tin nhắn.${RESET}"
    curl -s -X POST -H "Content-Type: application/json" -d "{\"content\": \" đừng lì nữa nha kid\"}" "$target_webhook" > /dev/null
  fi

  # Quay về menu chính sau khi spam xong
  main_menu
}

# Gửi Webhook STATUS định kỳ
send_status_loop() {
  banner
  echo -e "${CYAN}Chọn webhook để gửi status:${RESET}"
  echo -e "${YELLOW}1.${RESET} Webhook thủ công"
  echo -e "${YELLOW}2.${RESET} Webhook bot"
  read -p "Chọn: " mode

  if [ "$mode" == "1" ] && [ -z "$custom_webhook" ]; then
    echo -e "${RED}Webhook thủ công chưa được cấu hình!${RESET}"
    return
  elif [ "$mode" == "2" ] && [ -z "$bot_webhook" ]; then
    echo -e "${RED}Webhook bot chưa được cấu hình!${RESET}"
    return
  fi

  echo -e "${CYAN}Webhook Status hiện tại: ${RESET}$spam_status"
  read -p "Bật hay tắt (on/off): " status_choice
  spam_status=$status_choice
  echo -e "${GREEN}Nhấn Enter để quay lại menu chính.${RESET}"

  while true; do
    if [ "$spam_status" == "on" ]; then
      [[ "$mode" == "1" ]] && send_status "$custom_webhook"
      [[ "$mode" == "2" ]] && send_status "$bot_webhook"
    fi
    sleep 60
  done
}

# Menu chính
main_menu() {
  while true; do
    banner
    echo -e "${BLUE}Chọn một chức năng:${RESET}"
    echo -e "${YELLOW}1.${RESET} Nhập Webhook thủ công"
    echo -e "${YELLOW}2.${RESET} Tạo Webhook từ Bot"
    echo -e "${YELLOW}3.${RESET} Spam Webhook (Gửi tin nhắn liên tục)"
    echo -e "${YELLOW}4.${RESET} Gửi Webhook STATUS định kỳ"
    echo -e "${YELLOW}5.${RESET} Thoát"
    read -p "Chọn (1-5): " choice

    case $choice in
      1) input_webhook ;;
      2) create_webhook ;;
      3) spam_webhook ;;
      4) send_status_loop ;;
      5) exit ;;
      *) echo -e "${RED}Lựa chọn không hợp lệ.${RESET}" ;;
    esac
  done
}

# Khởi động menu chính
main_menu
